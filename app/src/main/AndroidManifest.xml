<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="14"
	android:versionName="1.5" package="com.CEInema">
	
	
	<uses-sdk android:minSdkVersion="8" 
	        android:targetSdkVersion="8"/>

	<application android:icon="@drawable/cei_icon" 
		android:label="@string/app_name" 
    	android:theme="@style/CustomTheme">      
    	
        <activity android:theme="@style/CustomTheme" android:name="CustomListView" 
            	  android:configChanges="keyboardHidden|orientation"></activity>
        
        <activity android:name="MediaInfoView" 
            	  android:configChanges="keyboardHidden|orientation"></activity>
        
        <activity android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:name="VideoPlayer"
            	  android:configChanges="keyboardHidden|orientation"></activity>
        
        <activity android:theme="@style/CustomThemeNoTitle"  android:name="Splash"
            	  android:configChanges="keyboardHidden|orientation">
        	<intent-filter>
	            <action android:name="android.intent.action.MAIN" />
	            <category android:name="android.intent.category.LAUNCHER"  />
        	</intent-filter>
       	</activity>
       	
        <activity android:theme="@style/CustomThemeNoTitle" android:name="MyWebView" 
            	  android:configChanges="keyboardHidden|orientation"></activity>
        
        <activity android:name="Tabs" 
            	  android:configChanges="keyboardHidden|orientation" ></activity>
        
        <activity android:name="FrontPage"
            	  android:configChanges="keyboardHidden|orientation"></activity>	
      
            
    </application>
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>